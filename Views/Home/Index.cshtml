@{
    ViewData["Title"] = "Inicio";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h2>Ingrese su número de tarjeta y PIN</h2>

        @if (ViewBag.MensajeError != null)
        {
            <div class="alert alert-danger">
                @ViewBag.MensajeError
            </div>
        }

        <form asp-action="ValidarTarjeta" method="post">
            <div class="form-group">
                <label for="numeroTarjeta">Número de Tarjeta:</label>
                <input type="text" id="numeroTarjeta" name="numeroTarjeta" class="form-control" maxlength="16" required />
            </div>

            <div class="form-group">
                <label for="pin">PIN:</label>
                <input type="password" id="pin" name="pin" class="form-control" maxlength="4" required />
            </div>

            <button type="submit" class="btn">Aceptar</button>
        </form>
    </div>
</body>
</html>